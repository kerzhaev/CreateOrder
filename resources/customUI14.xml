<!--
Обновленный Custom Ribbon XML для системы управления военным персоналом
Версия: 3.0.0
Дата: 01.12.2025
Описание: Добавлена группа для работы с надбавками без периодов
-->

<customUI xmlns="http://schemas.microsoft.com/office/2009/07/customui">
  <ribbon>
    <tabs>
      <tab id="customTab" label="СВО Макросы">
        
        <group id="docsGroup" label="Основные документы">
          <button id="mainExport" label="Приказ (Основной)" onAction="RunMainExport" imageMso="FileNew" size="large"/>
          <button id="spravkaExport" label="Справка ДСО" onAction="RunSpravkaExport" imageMso="FileProperties" size="large"/>
          <button id="raportExport" label="Рапорт" onAction="RunRaportExport" imageMso="FileSaveAs" size="large"/>
        </group>
        
        <group id="financeGroup" label="Финансы и Надбавки">
          <button id="riskOrder" label="Приказ за Риск" onAction="OnRiskOrderClick" imageMso="AccountingFormat" size="large"/>
          
          <menu id="allowancesMenu" label="Доп. Надбавки" imageMso="TableDesign" size="large">
              <button id="mnuExportAllowances" label="Экспорт приказов" onAction="OnExportAllowancesClick" imageMso="FileSaveAs"/>
              <button id="mnuValidate" label="Проверить ошибки" onAction="OnValidateAllowancesClick" imageMso="Spelling"/>
              <menuSeparator id="sep1" />
              <button id="mnuMassImport" label="Массовое добавление" onAction="OnMassImportEmployeesClick" imageMso="GroupSmartArtAdd"/>
              <button id="mnuSelectEmp" label="Найти сотрудника" onAction="OnSelectEmployeeClick" imageMso="FindDialog"/>
              <menuSeparator id="sep2" />
              <button id="mnuReferences" label="Справочники" onAction="OnManageReferencesClick" imageMso="AccessTableContacts"/>
          </menu>
        </group>
        
        <group id="dataGroup" label="Данные и Сервис">
          <button id="excelReport" label="Выгрузка Алушта/ФРП" onAction="OnPeriodsReportClick" imageMso="ExcelSpreadsheetInsert" size="large"/>
          <button id="importData" label="Обновить штат" onAction="RunImportData" imageMso="ImportExcel" size="large"/>
          <button id="showSettings" label="Настройки" onAction="ShowSettings" imageMso="ControlsGallery" size="large"/>
        </group>
        
      </tab>
    </tabs>
  </ribbon>
</customUI>